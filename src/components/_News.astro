<script>
  // on click loadMore
  document.getElementById("loadMore")?.addEventListener("click", function (e) {
    e.preventDefault();

    document.getElementById("loadMore")?.classList.add("loading");

    window.setTimeout(() => {
      // remove loading
      document.getElementById("loadMore")?.classList.remove("loading");

      // get span with class 'text' and set text content to "No more articles found"
      const text = document.getElementById("loadMore")?.querySelector(".text");
      if (text) text.textContent = "No more articles found";

      // get all hidden li and remove class hidden
      const hidden = document.querySelectorAll(".hidden");
      hidden.forEach((item) => {
        item.classList.remove("hidden");
      });
    }, 1200);
  });
</script>

