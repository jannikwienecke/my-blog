---
import PageMeta from "../components/PageMeta.astro";
import Intro from "../components/Intro.astro";
import AboutTheTheme from "../components/AboutTheTheme.astro";
import { SITE_TITLE } from "../config";
import Home from "src/components/Home.astro";
import About from "src/components/_About.astro";
import Form from "src/components/_Form.astro";
import News from "src/components/_News.astro";
import PageLayout from "src/layouts/_PageLayout.astro";
